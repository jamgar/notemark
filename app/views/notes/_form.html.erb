<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_messeges" class="alert alert-danger mb-2">
      <h4><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h4>

      <ul class="list-group-flush">
        <% note.errors.full_messages.each do |message| %>
          <li class="list-group-item bg-transparent"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class='form-group'>
    <%= form.text_area :body, id: 'note-textarea' %>
  </div>
  <%= form.submit 'Save', class: 'btn btn-success mb-2' %>
<% end %>
